    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend", // This sets the current working directory to the backend folder
            "console": "integratedTerminal"
        }
    ]
}